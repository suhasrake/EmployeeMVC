<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EmployeeDetails</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
           
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                    @Html.ActionLink("Home", "Employee", "Employee", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Posting", "", "", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Designation", "", "", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Create", "AddEmployee", "Addemployee", new { area = "" }, new { @class = "navbar-brand" })
                </ul>
                    <div class="navbar-right">                       
                         @Html.ActionLink("Logout", "LogOut", "login", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
            </div>            
        </div>
    </div>
    <div class="container body-content" style="padding:10px">
        @RenderBody()        
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Cellcomm Solutions Ltd</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>